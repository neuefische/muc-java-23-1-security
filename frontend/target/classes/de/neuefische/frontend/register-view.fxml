<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.neuefische.frontend.RegisterController">
   <children>
      <Label text="Username" />
      <TextField fx:id="usernameInput" />
      <Label text="E-Mail" />
      <TextField fx:id="emailInput" />
      <Label text="Password" />
      <PasswordField fx:id="passwordInput" />
      <Button mnemonicParsing="false" onAction="#onRegisterClick" text="Register NOW!" />
      <Label fx:id="errorLabel" />
   </children>
   <padding>
      <Insets left="50.0" right="50.0" />
   </padding>
</VBox>
